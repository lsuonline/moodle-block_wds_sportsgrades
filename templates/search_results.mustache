{{!
    @template block_sportsgrades/search_results

    Template for displaying search results

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * results Array of search results

    Example context (json):
    {
        "results": [
            {
                "id": 123,
                "username": "student1",
                "universal_id": "900123456",
                "firstname": "John",
                "lastname": "Doe",
                "college": "College of Science",
                "major": "Computer Science",
                "classification": "JR",
                "sports": [
                    {
                        "id": 1,
                        "code": "FOOT",
                        "name": "Football"
                    },
                    {
                        "id": 2,
                        "code": "BASK",
                        "name": "Basketball"
                    }
                ]
            }
        ]
    }
}}

<div class="sportsgrades-results-container">
    <h4>{{#str}}search_results, block_sportsgrades{{/str}}</h4>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{#str}}result_username, block_sportsgrades{{/str}}</th>
                    <th>{{#str}}result_universal_id, block_sportsgrades{{/str}}</th>
                    <th>{{#str}}result_firstname, block_sportsgrades{{/str}}</th>
                    <th>{{#str}}result_lastname, block_sportsgrades{{/str}}</th>
                    <th>{{#str}}result_college, block_sportsgrades{{/str}}</th>
                    <th>{{#str}}result_major, block_sportsgrades{{/str}}</th>
                    <th>{{#str}}result_classification, block_sportsgrades{{/str}}</th>
                    <th>{{#str}}result_sports, block_sportsgrades{{/str}}</th>
                    <th>{{#str}}result_view_grades, block_sportsgrades{{/str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#results}}
                <tr>
                    <td>{{username}}</td>
                    <td>{{universal_id}}</td>
                    <td>{{firstname}}</td>
                    <td>{{lastname}}</td>
                    <td>{{college}}</td>
                    <td>{{major}}</td>
                    <td>{{classification}}</td>
                    <td>
                        {{#sports}}
                            <span class="badge badge-info">{{name}}</span>
                        {{/sports}}
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary btn-sm sportsgrades-view-grades" data-student-id="{{id}}">
                            <i class="fa fa-eye"></i> {{#str}}result_view_grades, block_sportsgrades{{/str}}
                        </a>
                    </td>
                </tr>
                {{/results}}
            </tbody>
        </table>
    </div>
</div>
