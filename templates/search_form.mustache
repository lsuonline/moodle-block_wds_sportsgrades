{{!
    @template block_sportsgrades/search_form

    Template for the student search form

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * sports Array of sports
    * classifications Array of classifications
    * str Object containing strings

    Example context (json):
    {
        "sports": [
            {
                "id": 1,
                "code": "FOOT",
                "name": "Football"
            },
            {
                "id": 2,
                "code": "BASK",
                "name": "Basketball"
            }
        ],
        "classifications": [
            {
                "id": "FR",
                "name": "Freshman"
            },
            {
                "id": "SO",
                "name": "Sophomore"
            }
        ],
        "str": {
            "search_title": "Search Student Athletes",
            "search_universal_id": "Universal ID",
            "search_username": "Username",
            "search_firstname": "First Name",
            "search_lastname": "Last Name",
            "search_major": "Major",
            "search_classification": "Classification",
            "search_sport": "Sport",
            "search_sport_all": "All Sports",
            "search_button": "Search",
            "search_advanced": "Advanced Search"
        }
    }
}}

<div class="sportsgrades-search-container">
    <h4>{{str.search_title}}</h4>
    
    <form id="sportsgrades-search-form" class="mt-3">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="sportsgrades-universal-id">{{str.search_universal_id}}</label>
                <input type="text" class="form-control" id="sportsgrades-universal-id" name="universal_id" placeholder="">
            </div>
            
            <div class="form-group col-md-4">
                <label for="sportsgrades-username">{{str.search_username}}</label>
                <input type="text" class="form-control" id="sportsgrades-username" name="username" placeholder="">
            </div>
            
            <div class="form-group col-md-4">
                <label for="sportsgrades-sport">{{str.search_sport}}</label>
                <select class="form-control" id="sportsgrades-sport" name="sport">
                    <option value="">{{str.search_sport_all}}</option>
                    {{#sports}}
                        <option value="{{code}}">{{name}}</option>
                    {{/sports}}
                </select>
            </div>
        </div>
        
        <div class="sportsgrades-advanced-fields" style="display: none;">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="sportsgrades-firstname">{{str.search_firstname}}</label>
                    <input type="text" class="form-control" id="sportsgrades-firstname" name="firstname" placeholder="">
                </div>
                
                <div class="form-group col-md-3">
                    <label for="sportsgrades-lastname">{{str.search_lastname}}</label>
                    <input type="text" class="form-control" id="sportsgrades-lastname" name="lastname" placeholder="">
                </div>
                
                <div class="form-group col-md-3">
                    <label for="sportsgrades-major">{{str.search_major}}</label>
                    <input type="text" class="form-control" id="sportsgrades-major" name="major" placeholder="">
                </div>
                
                <div class="form-group col-md-3">
                    <label for="sportsgrades-classification">{{str.search_classification}}</label>
                    <select class="form-control" id="sportsgrades-classification" name="classification">
                        <option value=""></option>
                        {{#classifications}}
                            <option value="{{id}}">{{name}}</option>
                        {{/classifications}}
                    </select>
                </div>
            </div>
        </div>
        
        <div class="form-row mt-3">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-search"></i> {{str.search_button}}
                </button>
                
                <a href="#" id="sportsgrades-advanced-toggle" class="btn btn-link">
                    {{str.search_advanced}}
                </a>
            </div>
        </div>
    </form>
</div>
